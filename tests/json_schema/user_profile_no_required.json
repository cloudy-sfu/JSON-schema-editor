{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "description": "A schema for representing a user profile.",
    "type": "object",
    "properties": {
        "userId": {
            "description": "The unique identifier for a user.",
            "type": "integer"
        },
        "username": {
            "description": "The user's chosen name.",
            "type": "string"
        },
        "personalInfo": {
            "description": "Nested object for personal details.",
            "type": "object",
            "properties": {
                "email": {
                    "description": "User's primary email address.",
                    "type": "string",
                    "format": "email"
                },
                "height_m": {
                    "description": "Height in meters.",
                    "type": "number"
                }
            }
        },
        "tags": {
            "description": "A list of tags associated with the user. Can contain strings or numbers.",
            "type": "array",
            "items": {
                "type": ["string", "number"]
            }
        },
        "posts": {
            "description": "A list of posts made by the user.",
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "postId": {"type": "integer"},
                    "content": {"type": "string"}
                }
            }
        }
    }
}
